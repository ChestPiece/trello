  "features": [
    {
      "name": "Chat API",
      "description": "AI-powered chat endpoint that integrates with Trello API through various tools. Supports streaming responses, rate limiting, monitoring, and comprehensive Trello board management.",
      "files": [
        "app/api/chat/route.ts",
        "lib/tool-registry.ts",
        "lib/api-helpers.ts",
        "lib/rate-limiter.ts",
        "lib/Services/monitoring-service.ts",
        "components/Prompts/system-prompt.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Trello AI Chat API",
          "version": "1.0.0",
          "description": "AI-powered chat API with Trello integration"
        },
        "servers": [
          {
            "url": "http://localhost:3000",
            "description": "Development server"
          }
        ],
        "paths": {
          "/api/chat": {
            "post": {
              "summary": "Send chat message and get AI response",
              "description": "Processes chat messages and returns AI-generated responses with Trello tool integration",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "messages": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "role": {
                                "type": "string",
                                "enum": ["user", "assistant", "system"]
                              },
                              "parts": {
                                "type": "array",
                                "items": {
                                  "type": "object",
                                  "properties": {
                                    "type": {
                                      "type": "string",
                                      "enum": [
                                        "text",
                                        "tool-call",
                                        "tool-result"
                                      ]
                                    },
                                    "text": {
                                      "type": "string"
                                    }
                                  }
                                }
                              }
                            },
                            "required": ["role", "parts"]
                          }
                        }
                      },
                      "required": ["messages"]
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Streaming response with AI-generated content",
                  "content": {
                    "text/event-stream": {
                      "schema": {
                        "type": "string",
                        "description": "Server-sent events stream"
                      }
                    }
                  }
                },
                "400": {
                  "description": "Bad request - invalid message format",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "error": {
                            "type": "string"
                          },
                          "message": {
                            "type": "string"
                          },
                          "requestId": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "429": {
                  "description": "Rate limit exceeded",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "error": {
                            "type": "string"
                          },
                          "retryAfter": {
                            "type": "number"
                          },
                          "requestId": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "500": {
                  "description": "Internal server error"
                }
              }
            }
          }
        },
        "components": {
          "securitySchemes": {
            "OpenAI": {
              "type": "apiKey",
              "in": "header",
              "name": "Authorization",
              "description": "OpenAI API key for AI model access"
            },
            "Trello": {
              "type": "apiKey",
              "in": "query",
              "name": "key",
              "description": "Trello API key and token for board management"
            }
          }
        }
      }
